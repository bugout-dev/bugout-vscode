{
  "name": "Bugout",
  "displayName": "Bugout",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "description": "Bugout VSCode extension",
  "publisher": "Bugout",
  "icon": "https://github.com/bugout-dev/bugout-vscode/raw/master/resources/logo.png",
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --devtool nosources-source-map --config ./webpack.config.js",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./webpack.config.js",
    "package": "webpack --mode production --config ./webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bugout-dev/bugout-vscode.git"
  },
  "keywords": [
    "bugout"
  ],
  "author": "Bugout.dev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bugout-dev/bugout-vscode/issues"
  },
  "homepage": "https://github.com/bugout-dev/bugout-vscode#readme",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "bugoutView",
        "contents": "Fetching journals from [Bugout.dev](https://bugout.dev)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bugout-explorer",
          "title": "Bugout Explorer",
          "icon": "https://github.com/bugout-dev/bugout-vscode/raw/master/resources/logo.svg"
        }
      ]
    },
    "configuration": {
      "title": "Bugout",
      "properties": {
        "Bugout.AccessToken": {
          "type": "string",
          "scope": "window",
          "markdownDescription": "Your personal access token. It can be found at your [Bugout account](https://bugout.dev/account/tokens) page."
        },
        "Bugout.Api.endpoint": {
          "type": "string",
          "default": "https://spire.bugout.dev",
          "scope": "window",
          "markdownDescription": "Bugout API url for journal access."
        },
        "Bugout.Journal": {
          "type": "string",
          "scope": "window",
          "markdownDescription": "Your journal ID for Exceptions search."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "bugoutView.refresh",
          "when": "view == bugoutView",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "Bugout.createEntry",
        "title": "Bugout: Create entry"
      },
      {
        "command": "Bugout.editEntry",
        "title": "Bugout: Edit entry"
      },
      {
        "command": "bugoutView.refresh",
        "title": "Refresh",
        "icon": {
          "light": "https://github.com/bugout-dev/bugout-vscode/raw/master/resources/light/refresh.svg",
          "dark": "https://github.com/bugout-dev/bugout-vscode/raw/master/resources/dark/refresh.svg"
        }
      },
      {
        "command": "extension.bugoutDirectSearch",
        "title": "Bugout direct search for journal query"
      }
    ],
    "views": {
      "bugout-explorer": [
        {
          "id": "bugoutView",
          "name": "Bugout Base",
          "contextualTitle": "Journals Explorer"
        }
      ],
      "explorer": [
        {
          "id": "journalsView",
          "name": "Journals",
          "contextualTitle": "Journals Explorer"
        }
      ]
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "showdown": "^1.9.1"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/showdown": "^1.9.3",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  }
}