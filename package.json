{
  "name": "Bugout",
  "repository": {
    "type": "git",
    "url": "https://github.com/bugout-dev/bugout-vscode.git"
  },
  "displayName": "Bugout",
  "description": "Bugout VSCode extension",
  "publisher": "Bugout",
  "version": "0.1.4",
  "icon": "resources/logo.png",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "bugoutView",
        "contents": "Fetching journals from [Bugout.dev](https://bugout.dev)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bugout-explorer",
          "title": "Bugout Explorer",
          "icon": "resources/logo.svg"
        }
      ]
    },
    "languages": [
      {
        "id": "python",
        "aliases": [
          "Python",
          "python",
          "py"
        ]
      }, {
        "id": "javascript",
        "aliases": [
          "JavaScript",
          "Javascript",
          "javascript",
          "js"
        ]
      }, {
        "id": "typescript",
        "aliases": [
          "TypeScript",
          "Typescript",
          "typescript",
          "ts"
        ]
      }
    ],
    "configuration": {
      "title": "Bugout",
      "properties": {
        "Bugout.AccessToken": {
          "type": "string",
          "scope": "window",
          "markdownDescription": "Your personal access token. It can be found at your [Bugout account](https://bugout.dev/account/tokens) page."
        },
        "Bugout.Api.endpoint": {
          "type": "string",
          "default": "https://spire.bugout.dev",
          "scope": "window",
          "markdownDescription": "Bugout API url for journal access."
        },
        "Bugout.Journal": {
          "type": "string",
          "scope": "window",
          "markdownDescription": "Your journal ID for Exceptions search."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "bugoutView.refresh",
          "when": "view == bugoutView",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "Bugout.search",
        "title": "Bugout: Search in team journal"
      },
      {
        "command": "Bugout.addEntry",
        "title": "Bugout: Create entry"
      },
      {
        "command": "bugoutView.refresh",
        "title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
        }
      }
    ],
    "views": {
      "bugout-explorer": [
        {
          "id": "bugoutView",
          "name": "Bugout Base",
          "contextualTitle": "Journals Explorer"
        }
      ],
      "explorer": [
        {
          "id": "journalsView",
          "name": "Journals",
          "contextualTitle": "Journals Explorer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/handlebars": "^4.1.0",
    "@types/highlight.js": "9.12.2",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/showdown": "^1.9.3",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "axios": "^0.21.0",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "node-fetch": "2.6.1",
    "remark": "12.0.1",
    "remark-admonitions": "^1.2.1",
    "remark-html": "12.0.0",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "@types/handlebars": "^4.1.0",
    "@types/node-fetch": "^2.5.7",
    "@types/showdown": "^1.9.3",
    "handlebars": "^4.7.6",
    "highlight.js": "^10.4.1",
    "showdown": "^1.9.1",
    "showdown-highlight": "^2.1.5"
  }
}
